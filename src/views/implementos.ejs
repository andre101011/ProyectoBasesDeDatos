<% include partials/_header %>

<div class="container mt-5">
  <div class="row">
    <div class="col-md-7">
      <table class="table table-bordered table-hover">
        <thead>
          <tr>
            <td>#</td>
            <td>Observacion</td>
            <td>Codigo</td>
            <td>Acciones</td>
          </tr>
        </thead>
        <tbody>
          <% if (data) { %>
            <% for(var i = 0; i < data.length; i++) { %>
              <tr>
                <td><%= (i + 1) %></td>
                <td><%= data[i].observacion %></td>
                <td><%= data[i].codigo %></td>
           
                <td>
                  <a href="/update/<%= data[i].id %>" class="btn btn-info">Editar</a>
                  <a href="/delete/<%= data[i].id %>" class="btn btn-danger">Eliminar</a>
                </td>
              </tr>
            <% } %>
          <% } %>
        </tbody>
      </table>
    </div>
    <div class="col-md-5">
      <div class="card-body">

        <form action="/add" method="POST">
          <div class="form-group">
            <input type="text" name="observacion" placeholder="Observacion" class="form-control" autofocus>
          </div>
          <div class="form-group">
            <input type="text" name="codigo" placeholder="Codigo" class="form-control">
          </div>

          <button type="submit" class="btn btn-primary">
            Guardar Implemento
          </button>
        </form>
      </div>
    </div>
  </div>
</div>

<% include partials/_footer %>
